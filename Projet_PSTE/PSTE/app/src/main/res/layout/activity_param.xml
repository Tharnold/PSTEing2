<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Param">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:paddingBottom="30dp"
            android:text="Parametres du Trajet"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Quelle distance avez vous à parcourrir ?"/>
        <EditText
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Distance"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Combien de temps va durer le trajet ?"/>
        <EditText
            android:id="@+id/duree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:hint="Durée"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Est-ce qu'il va faire nuit ?"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/yesnuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"/>
            <RadioButton
                android:id="@+id/nonuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non"/>
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Quel est votre taux de fatigue actuel ?"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/nosleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reposé"/>
            <RadioButton
                android:id="@+id/yessleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fatigué"/>
        </RadioGroup>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>